<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipal">

    <!-- ðŸ” BARRA SUPERIOR: COLECCIONES -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvColecciones"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ§  CONTENEDOR CENTRAL -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPublicaciones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/rvColecciones"
        app:layout_constraintBottom_toTopOf="@id/navContenidoUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ”½ BARRA INFERIOR -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navContenidoUsuario"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/black"
        app:itemIconTint="@null"
        app:itemTextColor="@null"
        app:menu="@menu/menu_datos_usuario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>